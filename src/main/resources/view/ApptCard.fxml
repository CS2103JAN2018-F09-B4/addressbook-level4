<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox styleClass="apptCardPane" fx:id="apptCardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="120" prefWidth="130" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="90" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <Label fx:id="time" text="\$time" styleClass="cell_big_label" />
            <Label fx:id="clientName" styleClass="cell_small_label" text="\$clientName" />
            <Label fx:id="petName" styleClass="cell_small_label" text="\$petName" />
            <Label fx:id="vetTechName" styleClass="cell_small_label" text="\$vetTechName" />
        </VBox>
    </GridPane>
</HBox>
